<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <RootNamespace>ArcticFox.Zenject.SignalsGenerator</RootNamespace>
    <AssemblyName>SignalsGenerator</AssemblyName>
    <LangVersion>8</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="3.8.0-3.final" PrivateAssets="all" />
    <PackageReference Include="Microsoft.CodeAnalysis.Analyzers" Version="3.0.0" PrivateAssets="all" />
    <PackageReference Include="System.Collections.Immutable" Version="5.0.0" />
    <PackageReference Include="System.Reflection.Metadata" Version="5.0.0" />
  </ItemGroup>

  <Target Name="CopyDLLs" AfterTargets="Build">
    <Message Text="Executing CopyDLLs task" Importance="High" />

    <Copy
            SourceFiles="$(TargetDir)$(ProjectName).dll"
            DestinationFolder="$(TargetDir)\..\..\..\..\SignalsGenerator_Package\Assets\SignalsGenerator" />

    <Message Text="Copied build files" Importance="High" />
  </Target>

</Project>
